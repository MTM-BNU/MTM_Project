@model MTM_Holidays.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Order</h1>

<div class="container">
    <div class="row g-0 justify-content-center">
        <div class="col-md-6 offset-lg-0 d-flex mt-4 col-lg-5">
            <div class="p-3" style="background: #0D4C73;border-top-left-radius: 1em;border-bottom-left-radius: 1em;">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Holiday Details</h5>
                        <h5>@Model.Holiday.Title</h5>
                    </div>
                    <div class="card-body">
                        <img width="322" height="257" src="assets/img/elektra-klimi--Vss0cpydCw-unsplash.jpg">
                        <p class="card-text">@Model.Holiday.Description Nullam id dolor id nibh ultricies vehicula ut id elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus. Nullam id dolor id nibh ultricies vehicula ut id elit. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Donec id elit non mi porta gravida at eget metus.</p>
                        <h4 class="text-end">Price: Â£ @Model.Holiday.Price ppp.</h4>
                    </div>
                </div>
                <!--
                <form method="post" id="form1" style="border-bottom-right-radius: 1em;border-top-right-radius: 1em;">
                    <p class="text-light mt-2">Start Holiday Date:</p><input type="date" class="form-control" value="today"/>
                    <p class="text-light mt-2">Nights:</p><input type="number" class="form-control" placeholder="Qty" min="1" max="8" value="1" name="nights" />
                    <p class="text-light mt-2">Persons:</p><input type="number" class="form-control" placeholder="Qty" min="1" max="4" value="1" name="persons"/>
                </form>
                    -->
            </div>
        </div>
        <div class="col mt-4 col-md-6 col-lg-5">
            <div class="p-3" style="background: var(--bs-light);border-bottom-right-radius: 1em;border-top-right-radius: 1em;">
                <p class="lead" style="color: #F27052;font-weight: bold;"><i class="far fa-user" style="font-size: 20px;"></i>&nbsp;Personal Details</p>
                <form method="post" id="form2" style="border-bottom-right-radius: 1em;border-top-right-radius: 1em;">
                    <div class="p-2 mb-4 rounded" style="border: 0.01em solid #023E73;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-2">
                            <label class="form-label">First Name *</label>
                            <input class="form-control" asp-for="Customer.FirstName" placeholder="First Name">
                            <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Last Name *</label>
                            <input class="form-control" asp-for="Customer.LastName" placeholder="Last Name">
                            <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-4 col-6">
                            <label class="form-label">Date of Birth *</label>
                            <input asp-for="Customer.DateOfBirth" class="form-control" min="01/01/1900" />
                            <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <p class="lead" style="color: #F27052;font-weight: bold;">&nbsp;<i class="far fa-comment-alt"></i>&nbsp;Contact Info</p>
                    <div class="p-2 mb-4 rounded" style="border: 0.01em solid #023E73 ;">
                        <div class="col-6 mb-2">
                            <label class="form-label">Phone Number</label>
                            <input asp-for="Customer.PhoneNumber" class="form-control" placeholder="07700000000" />
                            <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
                        </div>
                        <label class="form-label">Email Address *</label>
                        <input asp-for="Customer.EmailAddress" class="form-control" placeholder="example@example.com" />
                        <span asp-validation-for="Customer.EmailAddress" class="text-danger"></span>
                    </div>
                    <p class="lead" style="color: #F27052;font-weight: bold;"><i class="far fa-address-card"></i>&nbsp;Billing Address</p>
                    <div class="p-2 mb-4 rounded" style="border: 0.01em solid #023E73 ;">
                        <label class="form-label">Address *</label>
                        <input class="form-control mb-1" asp-for="Address.Street" placeholder="Street">
                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                        <input class="form-control mb-1" asp-for="Address.Town" placeholder="Town">
                        <span asp-validation-for="Address.Town" class="text-danger"></span>
                        <div>
                            <div class="mb-2 col-5 float-end px-1">
                                <label class="form-label">Postcode *</label>
                                <input class="form-control mb-1" asp-for="Address.PostCode" placeholder="Post Code">
                                <span asp-validation-for="Address.PostCode" class="text-danger"></span>
                            </div>
                            <div class="col-7 pr-1 mb-2">
                                <label class="form-label">County *</label>
                                <input class="form-control mb-1" asp-for="Address.County" placeholder="County">
                                <span asp-validation-for="Address.County" class="text-danger"></span>
                            </div>
                            <div>
                                <label class="form-label">Country *</label>
                                <input class="form-control mb-1" asp-for="Address.Country" placeholder="Country">
                                <span asp-validation-for="Address.Country" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <p class="lead" style="color: #F27052;font-weight: bold;">Holiday Details</p>
                    <div class="p-2 mb-4 rounded" style="border: 0.01em solid #023E73 ;">
                        <label class="form-label">Start Holiday Date: *</label>
                        <input type="date" class="form-control" value="today" asp-for="@Model.StartDate" required />
                        <label class="form-label">Nights: *</label>
                        <input type="text" class="form-control" placeholder="Qty" min="1" max="8" value="1" asp-for="@Model.Night" required />
                        <label class="form-label">Persons *</label>
                        <input type="number" class="form-control" placeholder="Qty" min="1" max="4" value="1" asp-for="@Model.Person" required />
                    </div>
                    <div>
                        <input type="hidden" asp-for="Holiday.ID" />
                        <input type="hidden" asp-for="Holiday.Title" />
                        <input type="hidden" asp-for="Holiday.Rating" />
                        <input type="hidden" asp-for="Holiday.Region" />
                        <button class="btn btn-primary d-block w-100" type="submit" style="background: #f27052;">Continue and Order</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>